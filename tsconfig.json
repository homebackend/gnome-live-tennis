{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "lib": [
      "ES2022",
      "dom"
    ],
    "types": [
      "@girs/gtk-4.0",
      "gnome-shell",
      "node"
    ],
    "typeRoots": [
      "./node_modules/@girs",
      "./node_modules/@gjsify",
      "./node_modules/@girs/gio-2.0",
      "./node_modules/@girs/soup-3.0"
    ],
    "outDir": "./dist"
  },
  "include": [
    "src/**/*",
    "src/ambient.d.ts", // Add this line to include the declaration file
    "src/gi.d.ts"
  ]
}